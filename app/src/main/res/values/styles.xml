<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoAppBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PlayerTopBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:homeAsUpIndicator">@drawable/ic_cancel_black_24px</item>
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="android:color">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>

    </style>

    <style name="CardText">
        <!--<item name="android:textAlignment">textStart</item>-->
        <item name="android:gravity">start</item>
        <item name="android:color">@color/colorText</item>
        <item name="android:textSize">@dimen/card_font_size</item>
    </style>

    <style name="CategoryText">
        <!--<item name="android:textAlignment">textStart</item>-->
        <item name="android:gravity">start</item>
        <item name="android:color">@color/colorText</item>
        <item name="android:textSize">@dimen/card_font_size</item>
    </style>

</resources>
