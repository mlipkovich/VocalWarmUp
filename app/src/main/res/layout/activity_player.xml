<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:dividerPadding="0dp"
    tools:context="com.berniac.vocalwarmup.ui.PlayerActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/PlayerTopBar"/>
    <!-- TODO: Sonya: I tried to use this^ custom style but it was completely ignored. -->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_title"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_below="@+id/appbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player_draw_title"
            android:text="Круассан с кофе у океана"/>   <!-- TODO: let it be hardcoded so far -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/configure_player_image"
            android:src="@drawable/ic_settings_black_24px"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/warm_up_visualization"
        android:src="@drawable/pattern_visualisation"
        android:layout_marginTop="160dp"
        android:layout_below="@+id/layout_title"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/lower_tempo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-0.25x"
        android:layout_above="@+id/layout_tempo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/current_tempo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0x"
        android:layout_above="@+id/layout_tempo"
        android:layout_alignLeft="@+id/warm_up_visualization"
        android:layout_alignStart="@+id/warm_up_visualization" />

    <TextView
        android:id="@+id/upper_tempo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+0.25x"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_above="@+id/layout_tempo"
        android:layout_toRightOf="@+id/current_tempo_text"
        android:layout_toEndOf="@+id/current_tempo_text" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_tempo"
        android:layout_above="@+id/layout_control"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp">

        <SeekBar
            android:id="@+id/tempo_seek_bar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:max="50"
            android:progress="25"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/melody_btn"
            android:src="@drawable/ic_queue_music_black_24px"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/harmony_btn"
            android:src="@drawable/ic_music_note_black_24px"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_control"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/play_btn"
            android:src="@drawable/ic_play_circle_filled_black_24px"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/repeat_btn"
            android:src="@drawable/ic_replay_black_24px"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/change_direction_btn"
            android:src="@drawable/ic_swap_horiz_black_24px"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next_step_btn"
            android:src="@drawable/ic_fast_rewind_black_24px"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/previous_step_btn"
            android:src="@drawable/ic_fast_forward_black_24px"/>
    </LinearLayout>
</RelativeLayout >